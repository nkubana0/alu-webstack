global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http-in
    bind *:80
    mode http
    option forwardfor
    reqadd X-Forwarded-Proto:\ http

    acl is_ssl src -f /etc/haproxy/ssl_offloading.acl

    redirect scheme https if !is_ssl

    default_backend shiftafrica

backend shiftafrica
    balance roundrobin
    server 5779-web-01 54.147.175.242:443 check
    server 5779-web-02 54.242.59.215:443 check
